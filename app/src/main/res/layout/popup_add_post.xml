<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/popup_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Waste Details"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="10dp"/>

    <!-- Waste Name Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waste Name"
        android:textSize="16sp"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/editTextWasteName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Plastic, Paper, Metal, etc."
        android:background="@drawable/input_background"
        android:padding="10dp"
        android:textSize="16sp"
        android:inputType="text"/>

    <!-- Weight Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight (Kg)"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/editTextWasteWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter weight"
        android:background="@drawable/input_background"
        android:padding="10dp"
        android:textSize="16sp"
        android:inputType="numberDecimal"/>

    <!-- Description Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/editTextWasteDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Describe your waste"
        android:background="@drawable/input_background"
        android:padding="10dp"
        android:textSize="16sp"
        android:inputType="textMultiLine"/>

    <!-- Category Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Category"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp"/>

    <Spinner
        android:id="@+id/spinnerCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_background"/>

    <!-- Image Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Image"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_upload_image"
        android:contentDescription="Upload Image"
        android:background="@drawable/input_background"/>

    <!-- Location Label -->
    <TextView
        android:id="@+id/textViewLocationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location of your waste"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/editTextWasteLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter location"
        android:inputType="text"
        android:padding="10dp"
        android:background="@drawable/input_background" />

    <!-- Buttons + ProgressBar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/confirmButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Confirm"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:textSize="16sp"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:backgroundTint="@color/red"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:textSize="16sp"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
